CC = gcc
SRC = main.c school.c
NAME = school
RM = $(shell which rm)

CFLAGS = -Wall -Werror -Wextra -pedantic

OBJ = $(SRC:.c=.o)
.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	-$(RM) *~ $(NAME) $(OBJ) 2>/dev/null

oclean:
	-$(RM) $(OBJ) 2>/dev/null

fclean: clean oclean

re: fclean all

-include m.h
