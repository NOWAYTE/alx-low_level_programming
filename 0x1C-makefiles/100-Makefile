CC = gcc
SRC = main.c school.c
NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

OBJ := $(patsubst %.c, %.o, $(SRC))

ifeq ($(wildcard m.h),)
    $(error Header file m.h not found)
endif

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

$(OBJ): %.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	-$(RM) *~ $(NAME) $(OBJ) 2>/dev/null

oclean:
	-$(RM) $(OBJ) 2>/dev/null

fclean: clean oclean

re: fclean all
